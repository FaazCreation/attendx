
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // সরাসরি সুপার অ্যাডমিন চেক - ইমেইল ভিত্তিক
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'fh7614@gmail.com';
    }

    // মালিকানা চেক
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ইউজার প্রোফাইল রুলস
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // সেশন রুলস
    match /attendanceSessions/{sessionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      // অ্যাটেনডেন্স রেকর্ড রুলস (সাব-কালেকশন)
      match /attendanceRecords/{recordId} {
        allow read: if isSignedIn();
        // অ্যাডমিন যেকোনো রেকর্ড তৈরি/পরিবর্তন করতে পারেন
        // মেম্বাররা শুধুমাত্র নিজেদের রেকর্ড তৈরি করতে পারেন (যদি প্রয়োজন হয়)
        allow create: if isAdmin() || isOwner(recordId);
        allow update, delete: if isAdmin() || isOwner(recordId);
      }
    }

    // কালেকশন গ্রুপ কুয়েরি (ড্যাশবোর্ড বা রিপোর্টের জন্য)
    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isSignedIn();
    }
  }
}
