
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin();
      
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId;

      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      allow delete: if isAdmin();
    }
    
    match /counts/sessions {
        allow get: if isAdmin() || exists(/databases/$(database)/documents/users/$(request.auth.uid));
        allow write: if isAdmin();
    }

    match /{path=**}/attendanceRecords/{recordId} {
       allow list: if false; 
    }

    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      
      allow create, update: if isAdmin();
      allow delete: if false; 

      match /attendanceRecords/{recordId} {
        allow get: if isAdmin() || isOwner(recordId);
        
        allow list: if false;
        
        allow create: if isOwner(recordId)
                      && request.resource.data.userId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }
  }
}
