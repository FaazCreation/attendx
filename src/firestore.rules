rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // অ্যাডমিন যাচাই করার জন্য একটি শক্তিশালী ফাংশন। 
    // ইমেইল চেক করা সবচেয়ে দ্রুত এবং নির্ভরযোগ্য কারণ এটি অন্য কোনো ডকুমেন্ট রিড করে না।
    function isUserAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'fh7614@gmail.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin')
      );
    }

    // ব্যবহারকারী প্রোফাইল
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isUserAdmin();
    }
    
    // সেশন রুলস
    match /attendanceSessions/{sessionId} {
      allow read: if isSignedIn();
      // যে কেউ সেশন তৈরি করতে পারে যদি তারা সাইন-ইন থাকে (অথবা শুধু অ্যাডমিন করতে চাইলে isUserAdmin() দিন)
      allow create: if isSignedIn(); 
      // শুধুমাত্র সেশনের অ্যাডমিন অথবা সুপার অ্যাডমিন আপডেট/ডিলিট করতে পারবে
      allow update, delete: if isSignedIn() && (resource.data.adminId == request.auth.uid || isUserAdmin());

      // সেশন ভিত্তিক অ্যাটেনডেন্স রেকর্ড
      match /attendanceRecords/{recordId} {
        // সবাই দেখতে পারবে (রিপোর্ট এবং মেম্বার ভিউ এর জন্য)
        allow read: if isSignedIn();
        // শুধুমাত্র অ্যাডমিন উপস্থিতি দিতে পারবে
        allow write: if isUserAdmin() || (isSignedIn() && get(/databases/$(database)/documents/attendanceSessions/$(sessionId)).data.adminId == request.auth.uid);
      }
    }
    
    // কালেকশন গ্রুপ কুয়েরি সাপোর্ট
    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isSignedIn();
    }
  }
}