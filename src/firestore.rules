
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'fh7614@gmail.com';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /attendanceSessions/{sessionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /attendanceRecords/{recordId} {
        allow read: if isSignedIn();
        allow create: if isAdmin() || isOwner(recordId);
        allow update, delete: if isAdmin() || isOwner(recordId);
      }
    }

    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isSignedIn();
    }
  }
}
