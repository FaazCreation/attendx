
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isUserAdmin() {
      return isSignedIn() && getUserData().role == 'Admin';
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isUserAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isUserAdmin();
      allow delete: if isUserAdmin();
    }
    
    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isUserAdmin();

      match /attendanceRecords/{recordId} {
        // recordId is the userId
        allow get: if isSignedIn() && (isOwner(recordId) || isUserAdmin());
        allow list: if isSignedIn() && (isOwner(recordId) || isUserAdmin());
        allow create, update, delete: if isUserAdmin();
      }
    }
    
    // Allow collection group queries for attendance records for admins
    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isUserAdmin() || isOwner(recordId);
    }
  }
}
