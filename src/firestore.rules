
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return request.auth.token.email == 'fh7614@gmail.com';
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId;

      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      allow delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
      allow list: if isAdmin();
    }
    
    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      
      allow create, update, delete: if isAdmin();

      match /attendanceRecords/{recordId} {
        // Allow a user to get their own attendance record, and admins to get any.
        allow get: if isAdmin() || isOwner(recordId);
        
        // Deny all list operations by default.
        allow list: if false;
        
        // Allow a user to create their own attendance record if they are signed in,
        // the record ID matches their UID, and the record doesn't already exist.
        allow create: if isOwner(recordId)
                      && request.resource.data.userId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }
  }
}
