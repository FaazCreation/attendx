
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return request.auth.token.email == 'fh7614@gmail.com';
    }

    match /users/{userId} {
      allow get: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId;

      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      allow delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow list, create, update, delete: if isAdmin();
    }
    
    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      
      allow create, update: if request.auth.uid == '90e685nyfFNSSRsEEvgjhGsdl063';
      allow delete: if false;

      match /attendanceRecords/{recordId} {
        allow get: if isAdmin() || isOwner(recordId);
        
        allow list: if false;
        
        allow create: if isOwner(recordId)
                      && request.resource.data.userId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }
  }
}
