
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // সরাসরি সুপার অ্যাডমিন চেক - এটি দ্রুত এবং নির্ভরযোগ্য
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'fh7614@gmail.com';
    }

    // মালিকানা চেক
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ইউজার প্রোফাইল রুলস
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isSuperAdmin();
    }
    
    // সেশন রুলস
    match /attendanceSessions/{sessionId} {
      allow read: if isSignedIn();
      
      // শুধুমাত্র সুপার অ্যাডমিন সেশন তৈরি, আপডেট বা ডিলিট করতে পারবেন
      allow create, update, delete: if isSuperAdmin();

      // অ্যাটেনডেন্স রেকর্ড রুলস
      match /attendanceRecords/{recordId} {
        allow read: if isSignedIn();
        
        // অ্যাডমিন যেকোনো রেকর্ড পরিবর্তন করতে পারেন
        // মেম্বাররা নিজেদের রেকর্ড জমা দিতে পারেন
        allow create: if isSuperAdmin() || isOwner(recordId);
        allow update, delete: if isSuperAdmin() || isOwner(recordId);
      }
    }

    // কালেকশন গ্রুপ কুয়েরি (যেমন ড্যাশবোর্ড বা রিপোর্ট) এর জন্য অনুমতি
    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isSignedIn();
    }
  }
}
