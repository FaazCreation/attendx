
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    match /users/{userId} {
      allow get: if isAdmin() || isOwner(userId);
      allow list: if isAdmin();
      
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId;

      allow update: if isAdmin() || (isOwner(userId) && request.resource.data.role == resource.data.role);

      allow delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
      allow list: if isAdmin();
    }

    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      
      allow create, update, delete: if isAdmin();

      match /attendanceRecords/{recordId} {
        // Allow a user to get their own attendance record, and admins to get any.
        allow get: if isAdmin() || isOwner(recordId);
        
        // Deny all list operations by default on the subcollection path.
        // A specific rule for collectionGroup queries will handle necessary list operations.
        allow list: if false;
        
        // Allow a user to create their own attendance record if they are signed in,
        // the record ID matches their UID, and the record doesn't already exist.
        allow create: if isOwner(recordId)
                      && request.resource.data.userId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }
    
    // Rule for the 'attendanceRecords' collection group query used in the profile page.
    // This allows a signed-in user to list only their own attendance records across all sessions.
    match /{path=**}/attendanceRecords/{recordId} {
        allow read: if isSignedIn() && request.query.where.size() == 1 &&
                       request.query.where[0].field == "userId" &&
                       request.query.where[0].op == "==" &&
                       request.query.where[0].value == request.auth.uid;
    }
  }
}
