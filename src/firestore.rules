rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'fh7614@gmail.com';
    }

    // Check if user is admin via their role in the user document
    function isRoleAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'
      );
    }

    function isUserAdmin() {
      return isSuperAdmin() || isRoleAdmin();
    }
    
    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && (request.auth.uid == userId || isSuperAdmin());
    }
    
    // Attendance Sessions
    match /attendanceSessions/{sessionId} {
      // Anyone signed in can view sessions
      allow read: if isSignedIn();
      
      // Only admins can create sessions
      allow create: if isUserAdmin();
      
      // Admin who created the session or super admin can update/delete
      allow update, delete: if isSignedIn() && (
        (resource.data.adminId == request.auth.uid) || isSuperAdmin()
      );

      // Attendance Records sub-collection
      match /attendanceRecords/{recordId} {
        // Members need to read their own status, and admins need to read all
        allow read: if isSignedIn();
        
        // Admins can write attendance records
        allow write: if isUserAdmin() || (
          isSignedIn() && get(/databases/$(database)/documents/attendanceSessions/$(sessionId)).data.adminId == request.auth.uid
        );
      }
    }
    
    // Support for collection group queries (Reports etc)
    match /{path=**}/attendanceRecords/{recordId} {
      allow read: if isSignedIn();
    }
  }
}