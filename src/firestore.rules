
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check the incoming resource data on create, or the existing resource on update/delete
      // This is a common pattern to check a role without a separate `get` call.
      // For reads, we check the existing data in the user's document.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    function isNewUserRoleUnchanged() {
      return request.resource.data.role == 'General Member';
    }

    function isExistingUserRoleUnchanged() {
        return request.resource.data.role == resource.data.role;
    }


    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      
      allow create: if isOwner(userId) && isNewUserRoleUnchanged();

      allow update: if (isOwner(userId) && isExistingUserRoleUnchanged()) || isAdmin();

      allow delete: if isAdmin();
    }
    
    match /{path=**}/attendanceRecords/{recordId} {
       allow list: if false; 
    }

    match /attendanceSessions/{sessionId} {
      allow get, list: if isSignedIn();
      
      allow create, update, delete: if isAdmin();

      match /attendanceRecords/{recordId} {
        allow get: if isAdmin() || isOwner(recordId);
        
        allow list: if false;
        
        allow create: if isOwner(recordId)
                      && request.resource.data.userId == request.auth.uid;

        allow update, delete: if isAdmin();
      }
    }
    
    match /counts/{countId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}

    